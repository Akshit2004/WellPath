rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Todos collection rules
    match /todos/{todoId} {
      // Allow read if user owns the todo
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated and setting their own userId
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['text', 'completed', 'createdAt', 'priority', 'userId', 'order']) &&
                       request.resource.data.text is string &&
                       request.resource.data.text.size() > 0 &&
                       request.resource.data.text.size() <= 500 &&
                       request.resource.data.completed is bool &&
                       request.resource.data.createdAt is timestamp &&
                       request.resource.data.priority in ['high', 'medium', 'low'] &&
                       request.resource.data.order is number &&
                       (request.resource.data.dueDate == null || request.resource.data.dueDate is timestamp);
      
      // Allow update if user owns the todo and not changing userId
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.text is string &&
                       request.resource.data.text.size() > 0 &&
                       request.resource.data.text.size() <= 500 &&
                       request.resource.data.completed is bool &&
                       request.resource.data.priority in ['high', 'medium', 'low'] &&
                       request.resource.data.order is number &&
                       (request.resource.data.dueDate == null || request.resource.data.dueDate is timestamp);
      
      // Allow delete if user owns the todo
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Users collection (if you add user profiles later)
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      
      // Notes subcollection rules
      match /notes/{noteId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
